@model MVCproject.Default_Index
<div id="ktsn-dialogs-user" class="dialog-window" data-type="form">

    <div style="float: left; width: 90px; padding:12px;">
        <span class="dialog-icon sidebar-user">Account</span>
    </div>

    <div style="float: left; border-left: 1px solid #ccc; padding: 12px; text-align: left;">
        <dl>
            <dt>Name:</dt>
            <dd><input type="text" value="@Model.user.name" id="dlg-user-name"/></dd>
            <dt>Email:</dt>
            <dd><input type="email" value="@Model.user.email" id="dls-user-email" /></dd>
            <dt>Password:</dt>
            <dd><input type="password" value="" id="dlg-user-password"/></dd>
        </dl>

        <div style="text-align: right;">
            <span class="dialog-status"></span>
            <button class="bnSave">Save</button>
            <button class="bnClose">Close</button>
        </div>

    </div>

</div>

<div id="ktsn-dialogs-new" class="dialog-window">

    <div style="float: left; width: 90px; padding:12px;">
        <span class="dialog-icon sidebar-my">My Maps</span>
    </div>

    <div style="float: left; border-left: 1px solid #ccc; margin-left:12px; text-align: left; width:332px;">
        <h3>Create new Map</h3>
        <div style="padding:12px;">
            <label>Map Name</label>
            <input type="text" id="map-name" value="" style="width:300px;"/>
            <label>Description</label>
            <textarea id="map-descr" style="width:300px; height:32px;"></textarea>
        </div>
        <div style="text-align: right; border-top:1px solid #ccc; padding:12px;">
            <button class="bnSave">Save</button>
            <button class="bnClose">Close</button>
        </div>
    </div>
</div>